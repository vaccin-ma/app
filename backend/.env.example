SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
DATABASE_URL=sqlite:///./vaccines.db

# Reminder service (Minimax LLM — Arabic Fusha text + optional ElevenLabs voice)
# Get API key: https://platform.minimax.io/user-center/basic-information/interface-key
# (Coding Plan or Pay-as-you-go; if Minimax fails, fallback Arabic text is used and a warning is logged)
MINIMAX_API_KEY=
MINIMAX_BASE_URL=https://api.minimax.io
# MiniMax-M2.5 = Coding Plan; M2-her = Pay-as-you-go dialogue model
MINIMAX_MODEL=MiniMax-M2.5
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=JBFqnCBsd6RMkjVDRZzb
# Optional: per-language voice IDs for notifications (AR, FR, EN); fallback to ELEVENLABS_VOICE_ID if unset

REMINDER_SEND_VOICE=false
REMINDER_MEDIA_DIR=media/reminders

# Email (SMTP) — send reminder with voice attachment
EMAIL_REMINDERS_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# Twilio — SMS and voice call reminders (trial: only verified numbers)
TWILIO_SMS_ENABLED=false
TWILIO_VOICE_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
# Public URL of this backend (required for voice: Twilio fetches /reminders/twiml/{id})
APP_BASE_URL=

# CORS — origins allowed to call the API (comma-separated). Required when frontend is on another domain.
CORS_ORIGINS=http://localhost:5173,https://jelba.vercel.app

# One-time: set to true (or 1) and restart backend to replace vaccine schedule and timelines with current SCHEDULE (Semaine 4, Mois 6, etc.)
# REPLACE_VACCINE_TEMPLATES=false

# Set to true to seed fake demo data (parents, children, vaccinations) on startup
SEED_FAKE_DATA=false

# Default admin credentials (created on first startup if no admin exists)
ADMIN_EMAIL=admin@jelba.ma
ADMIN_PASSWORD=change-this-password
ADMIN_NAME=Admin Jelba